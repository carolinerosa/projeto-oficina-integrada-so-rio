<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top|bottom|fill_vertical|center_horizontal|fill_horizontal|start"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/campanhas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:focusable="false"
        android:minWidth="90dp"
        android:text="Sôrio" />

    <ImageButton
        android:id="@+id/barra_escolha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button01"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView2"
        android:onClick="barra_escolha"
        android:src="@drawable/barra_escolha" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/campanhas"
        android:layout_alignBottom="@+id/campanhas"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:focusable="false"
        android:minWidth="90dp"
        android:text="Top 5" />

    <TextView
        android:id="@+id/frase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Button01"
        android:layout_below="@+id/campanhas"
        android:layout_marginTop="20dp"
        android:text="Aqui será o tópico eu n sei oq vai acontecer XD" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/frase"
        android:clickable="true"
        android:minHeight="28dip"
        android:minWidth="90dp"
        android:onClick="click_TodasCampanhas"
        android:text="Campanhas" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/Button01"
        android:layout_alignTop="@+id/frase"
        android:layout_toRightOf="@+id/campanhas"
        android:src="@drawable/galeria_provisioria" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/barra_escolha"
        android:layout_below="@+id/Button01"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/gps" />

    <Button
        android:id="@+id/sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/barra_escolha"
        android:layout_alignRight="@+id/barra_escolha"
        android:minHeight="28dip"
        android:text="Sair" 
        android:onClick="Quit"/>

</RelativeLayout>